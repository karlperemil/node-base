body
  text-rendering: optimizeLegibility
  line-height: 1.4
  font-family: font-main
  font-size: 11px
  letter-spacing: 1px
  line-height: 19px

h1, h2
  -webkit-font-smoothing: antialiased
  font-family: font-heading-wide
  font-weight: 400
  text-transform: uppercase
  line-height: 0.9em
  margin: 0 0 0.25em

h3, h5
  -webkit-font-smoothing: antialiased
  font-family: font-heading-wide
  text-transform: uppercase
  font-size: 3.25em
  font-weight: 400
  letter-spacing: 1px
  margin-bottom: .5em
  margin-top: 0.5em

h5
  font-size: 2.5em
  margin: 0 0 0.25em

h4
  font-family: font-heading-wide
  text-transform: uppercase
  font-weight: 100
  margin-bottom: 2em

h1
  font-size: 2.5em
  line-height: 1.3em
  text-transform: uppercase

h2
  font-size: 18px
  font-weight: 600
  letter-spacing: 1px
  margin-bottom: 0.5em
  color: #202020

h3
  font-size: 16px
  font-weight: 600
  letter-spacing: 1px
  margin-bottom: 0.5em
  color: #202020

p
  max-width: 800px
  margin-bottom: 1em

.caps
  text-transform: uppercase
  letter-spacing: .5px

+mobile()
  body
    font-size: 13px

.atlas
  font-family: font-main

.druk
  font-family: font-heading

.druk-wide
  font-family: font-heading-wide
