.index-movie-list
  margin: 2em 0 2em 0

.index-movie-featured
  position: relative
  width: 100%
  margin-top: 5em
  margin-bottom: 2em

.movie-feature-title
  position: absolute
  bottom: 30%
  left: -.5em
  z-index: 5
  background: white
  padding: .4em
  text-transform: uppercase
  +below(1)
    bottom: 103%
    font-size: 4em

.is-selected-work
  margin-top: 5em

.movie-feature-button
  position: absolute
  bottom: 3em
  right: 3em
  border: 1px solid white
  background-color: white
  color: black
  text-transform: uppercase
  font-family: font-heading-wide
  outline: 0
  padding: 1em 1em 0.6em 0.7em
  cursor: pointer
  &:hover
    color: white
    border: 1px solid black
    background-color: black
    text-decoration: none
  +below(2)
    font-size: 80%
  +below(1)
    bottom: 2em
    right: 2em

.index
  .movie.is-thumbnail
    col(1/4, uncycle:2, cycle: 4)
    +below(3)
      col(1/3, uncycle:4, cycle: 3)
    +below(2)
      col(1/2, uncycle:3, cycle: 2)
    +below(1)
      col(1/1, uncycle:2, cycle: 1)

#cat
  sprite($cats-cat1)
