.movie-single-title
  margin: 0
  +below(2)
    font-size: 1.5em

.movie-single-client
  margin: 0
  color: red
  +below(2)
    font-size: 1.5em

.movie-info
  col(3/4)
  +below(2)
    col(1/1)

.movie-subinfo
  col(1/4)
  border-top: 3px solid black
  padding-top: 1em
  p
    margin-bottom: 0.5em
  +below(2)
    col(1/1)
    padding-bottom: 1em
    border-bottom: 3px solid black
    margin-bottom: 1em
  img
    margin-right: .5em
    clear: both

.movie-subinfo a:hover
  opacity: 0.9

.movie-vimeo
  width:100%
  margin-bottom: 2em
  .aspect-ratio
    position: relative
    width: 100%
    height: 0
    padding-bottom: 51%
    iframe
      position: absolute
      width: 100%
      height: 100%
      left: 0
      top: 0

.movie-single
    .related-headline
      col(1/1)
      margin-top:20em
      +below(2)
        margin-top: 5em
      +below(1)
        margin-top: 3em
    .movie-list
      cr()
    .movie.is-thumbnail
      col(1/4, uncycle: 2)
      a:hover
        opacity: 0.8
      +below(3)
        col(1/3, uncycle: 4, cycle: 3)
      +below(2)
        col(1/2, uncycle: 3, cycle: 2)
      +below(1)
        col(1/1, uncycle: 2, cycle: 1)


